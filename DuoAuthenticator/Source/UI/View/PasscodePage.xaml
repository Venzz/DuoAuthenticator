<Core:Page
    x:Class="DuoAuthenticator.UI.View.PasscodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:Venz.UI.Xaml">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox
            x:Name="Code"
            IsReadOnly="True"
            Margin="10"
            FontSize="64"
            Text="{Binding Passcode}">
        </TextBox>
        <StackPanel Grid.Row="2" Margin="10" Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Width="165"
                Content="Copy"
                Tapped="OnCopyTapped">
            </Button>
            <Button
                Width="165"
                Content="Next"
                Tapped="OnNextTapped">
            </Button>
        </StackPanel>
        <Grid Margin="10,0" Grid.Row="3">
            <CheckBox Margin="0,-100,0,0" Content="Auto close application"/>
            <Button Width="170" Content="Export" HorizontalAlignment="Left" Tapped="OnExportTapped"/>
        </Grid>
    </Grid>
</Core:Page>
