<Page
    x:Class="DuoAuthenticator.View.SetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="10,10,10,50">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,20" Text="Activate via Email"/>
            <TextBox x:Name="EmailMessageUrl" Margin="0,0,0,10" PlaceholderText="Paste a link from the email message"/>
            <Button Width="170" Content="Activate" HorizontalAlignment="Left" Tapped="OnActivateViaEmailMessageTapped"/>
        </StackPanel>
        <StackPanel Margin="10">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,20" Text="Activate via Exported Settings"/>
            <TextBox x:Name="ExportedContent" Margin="0,0,0,10"/>
            <Button Width="170" Content="Activate" HorizontalAlignment="Left" Tapped="OnActivateViaExportedSettingsTapped"/>
        </StackPanel>
    </StackPanel>
</Page>
